<h3>以下の内容で、投稿する</h3>

<%= form_with(model: @post, url: posts_path,local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p>本文:<%= @post.content %></p>

  <%= image_tag(@post.picture.url,style:'width:400px;height:240px') if @post.picture && @post.picture.url %>
  <%= form.hidden_field :picture_cache %>

  <%= form.submit "登録する" %>

  <%= form.submit "戻る", name: 'back' %>

<% end %>
